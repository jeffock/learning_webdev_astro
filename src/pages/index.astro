---
import Layout from '../layouts/Layout.astro';

const name = "Astro";
const style = 'orange'; // dynamic, so can pick a style from css classes
// Lists
const users = ['Jeff', 'Josh', 'Joe', 'James', 'Jack'];
const passkeys = ['123', '321', '000', '111', '142'];

// fetch data from backend
const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');
const backend_users = await response.json();

const visible = true;
---

<Layout>
    <h1 class={style}>Hello {name}</h1>

    <details>
        <summary>Users:</summary>

        <ul>
            {users.map(user => <li>{user}</li>)}
        </ul>

    </details>
   
    <!-- ? is for "if else" kind of, 1st if True next if False -->
    {visible ? <p>Passkey visibility: True</p> : <p>Passkey visibility: False</p>}

    <!-- visible && means if visible True -->
    {visible &&
    <details>
        <summary>Passwords:</summary>

        <ul>
            {passkeys.map(passkey => <li>{passkey}</li>)}
        </ul>

    </details>
    }
    
    <br>

    <details>
        <summary>Users from Backend:</summary>

        <ul>
            {backend_users.map(user => <li>{user.name}</li>)}
        </ul>

    </details>
</Layout>

<style>
    h1 {
        color: red;
    }

    .purple {
        color: purple;
    }

    .orange {
        color: orange;
    }
</style>

